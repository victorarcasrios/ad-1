<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="serpis.ad.jpa.mysql">
        <description>
            Persistence unit for the JPA tutorial of 'Categoria & Articulo' Getting Started Guide
        </description>

        <class>serpis.ad.Categoria</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/dbprueba" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="sistemas" />

            <property name="hibernate.show_sql" value="true" />
            <!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
        </properties>

    </persistence-unit>

</persistence>
